{
    "compilerOptions": {
        // 否始终以严格模式检查每个模块
        "alwaysStrict": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        // 指定要引入的库文件
        "lib": [
            "es6",
            "es2018",
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist",
        "removeComments": true,
        "target": "es6"
    },
    "exclude": [
        "node_modules",
        "tests"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}